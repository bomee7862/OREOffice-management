# PostgreSQL 데이터베이스 설정
# 이 파일을 .env로 복사하여 사용하세요

DATABASE_URL=postgresql://username:password@localhost:5432/office_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=office_management
DB_USER=postgres
DB_PASSWORD=your_password

# 서버 설정
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# JWT 인증 (필수 - 반드시 변경하세요)
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# CORS 설정 (콤마로 구분, 미설정 시 전체 허용)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
